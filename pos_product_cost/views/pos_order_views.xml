<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_order_tree" model="ir.ui.view">
        <field name="name">pos.order.tree.cost</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="order_cost" sum="Cost" optional="show"/>
            </field>
        </field>
    </record>

    <record id="view_pos_pos_form" model="ir.ui.view">
        <field name="name">pos.order.form.cost</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <field name="amount_total" position="after">
                <field name="order_cost"
                   force_save="1"
                   class="oe_subtotal_footer_separator"
                   widget="monetary"/>
            </field>
            <xpath expr="//field[@name='lines']/tree/field[@name='total_cost']" position="attributes">
                <attribute name="optional">show</attribute>
            </xpath>
        </field>
    </record>
</odoo>
